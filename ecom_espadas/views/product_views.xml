<odoo>
    <record id="product_form_view" model="ir.ui.view">
        <field name="name">ecom_espadas.product.form</field>
        <field name="model">ecom_espadas.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="stock_quantity"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_tree_view" model="ir.ui.view">
        <field name="name">ecom_espadas.product.tree</field>
        <field name="model">ecom_espadas.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="stock_quantity"/>
            </tree>
        </field>
    </record>
</odoo>
